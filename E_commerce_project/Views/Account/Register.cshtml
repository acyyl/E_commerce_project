﻿@using E_commerce_project.ViewModels;
@model RegisterVM

@{
    ViewData["Title"] = "Register";
}

<!-- Background Section -->
<div class="background-container">
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="col-md-4 col-lg-3 card shadow-sm p-4">
            <h2 class="text-center text-black mb-4">Register</h2>
            <form asp-action="Register" method="post" asp-route-returnurl="@ViewData["ReturnUrl"]">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Name Field -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label text-black">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter your name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Email Field -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label text-black">Email</label>
                    <input asp-for="Email" class="form-control" type="email" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Password Field -->
                <div class="mb-3">
                    <label asp-for="Password" class="form-label text-black">Password</label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Confirm Password Field -->
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label text-black">Confirm Password</label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm your password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Address Field -->
                <div class="mb-3">
                    <label asp-for="Address" class="form-label text-black">Address</label>
                    <textarea asp-for="Address" class="form-control" rows="2" placeholder="Enter your address"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <!-- Action Links and Submit Button -->
                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Login" class="text-decoration-none text-black" asp-route-returnurl="@ViewData["ReturnUrl"]">Have an account?</a>
                    <button type="submit" class="btn btn-danger w-50">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

